<div class="timeline" id="<%= dom_id tweet %>">
  <div class="disposition">
  <% if tweet.profilepicture.present? %>
    <img src="<%= tweet.profilepicture %>" alt="profile picture" class="profile-pic">
  <% else %>
    <img src="https://abs.twimg.com/sticky/default_profile_images/default_profile_400x400.png" alt="default profile picture" class="profile-pic">
  <% end %>
    <div class="tweet-body">
      <div class="username-flex">
        <p class="fw-bold tweet-name"><%= tweet.name %></p>
        <p class="tweet-username">@<%= tweet.username %></p>
      </div>
      <%= simple_format tweet.body %>
        <% if tweet.image.present? %>
          <%= image_tag tweet.image, alt: 'Mon image', class: "image-tweet" %>
        <% end %>
    </div>
  </div>
</div>
